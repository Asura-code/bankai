{
    "manifest_version": 3,
    "name": "Bankai",
    "description": "Расширение для бесплатного просмора кинолент",
    "icons":{
        "96": "1.png"
    },
    "version": "2.0",
    "action":{
        "default_popup": "index.html"
    },
    "permissions": ["activeTab", "scripting", "tabs"],
    "content_scripts": [
        {
            "matches": [ "https://www.kinopoisk.ru/*", "https://www.imdb.com/*", "https://shikimori.one/*" ],
            "js": [ "app.js" ]
        }
    ]
 }